{{#if drupal}}
.container {
	display: flex;
	flex-direction: column;
	min-width: var(--sm);
	max-width: var(--md);
	margin: var(--10) auto;
}

.containerTitle {
	font-weight: 800;
	font-size: var(--10);
	margin-bottom: var(--6);
}

.container > a {
	text-decoration-line: underline;
}

.content {
	margin: var(--10) auto;
	max-width: var(--md);
	min-width: var(--sm);
	color: var(--text-body);
	font-size: var(--5);
}


.content > p  {
	margin-top: var(--6);
	margin-bottom: var(--2);
}

/* lg breakpoint */
@media (min-width: 1024px) {
	.container > h1 {
		font-size: var(--14);
	}

	.content {
		min-width: var(--md);
	}
}

{{else if wp}}
.content {
	display: inherit;
	margin: var(--10) auto;
	max-width: var(--md);
	min-width: var(--sm);
	color: var(--text-body);
	font-size: var(--5);
}

{{/if}}