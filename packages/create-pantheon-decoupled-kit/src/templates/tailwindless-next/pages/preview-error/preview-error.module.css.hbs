{{#if drupal}}
	.container {
		display: flex;
		flex-direction: column;
		margin-top: var(--20);
		margin-left: auto;
		margin-right: auto;
		margin-bottom: 0;
		width: 50vw;
	}
	
	.container > h2 {
		text-align: center;
		font-size: var(--8);
		margin-bottom: var(--8);
	}

	.container > a {
		text-decoration-line: underline;
		font-size: var(--5);
	}

{{/if}}