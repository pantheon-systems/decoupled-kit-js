.layout {
	display: flex;
	flex-direction: column;
	min-height: 100dvh;
	min-width: inherit;
}

.layout > main {
	margin-bottom: auto;
}

.footerCopy {
	margin-top: 0;
	margin-bottom: 0;
	margin-left: auto;
	margin-right: auto;
}

.footerCopy > a {
	text-decoration-line: underline;
}

.footerCopy > a:first-child {
	color: var(--white);
}

.footerCopy > a:last-child {
	color: var(--blue);
}

.footerCopy > a:hover {
	color: var(--blue-100);
}

{{#if search}}
.searchHeaderContainer {
	display: flex; 
	margin: var(--x-auto);
	flex-direction: row; 
	flex-wrap: wrap; 
	justify-content: center; 
}
{{/if}}
