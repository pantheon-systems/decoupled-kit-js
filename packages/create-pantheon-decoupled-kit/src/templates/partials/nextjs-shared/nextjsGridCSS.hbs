.gradientPlaceholder {
	border-radius: var(--1) var(--1) 0 0;
	background-image: linear-gradient(to bottom, var(--blue-100), var(--blue));
	height: inherit;
}

.card {
	cursor: pointer;
	border-radius: var(--2);
	border: var(--0_5) var(--light-gray) solid;
	overflow-x: hidden;
	/*
	 * generated by https://tailwind-to-css.vercel.app/
	 * using shadow-lg 
	 */
	box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
	height: 100%;
}

.card:hover {
	border: var(--0_5) var(--indigo) solid;
	height: calc(inherit - 2px)
}

.cardTitle {
	padding-top: var(--4);
	padding-bottom: var(--4);
	padding-left: var(--6);
	padding-right: var(--6);
	font-size: var(--5);
	font-weight: 600;
}

.cardImg {
	position: relative;
	flex-shrink: 0;
	height: var(--40);
}

{{#if umami}}
.recipeCategory {
		display: inherit;
		padding: 0 var(--2) var(--3) 0;
		text-align: right;
		font-size: calc(var(--3) + var(--0_5));
		color: var(--slate-400);
}

{{/if}}