  overflow: hidden;
  position: absolute;
  width: 1px;
}

.toggleDisabled {
  cursor: not-allowed;
}

.toggleTrack {
  width: 50px;
  height: 24px;
  border-radius: 30px;
  background-color: #4d4d4d;
