  touch-action: pan-x;
  position: relative;
  cursor: pointer;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
}

.toggleScreenReader {
  border: 0;
  clip: rect(0 0 0 0);
  height: 1px;
